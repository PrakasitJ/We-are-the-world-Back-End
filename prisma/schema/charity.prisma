model Charity {
    id          Int           @id @default(autoincrement())
    user_id     String        @unique @db.Uuid
    name        String        @db.VarChar(50)
    description String        @db.VarChar(500)
    status      CharityStatus @default(CLOSE)
    latitude    Float
    longitude   Float
    address     String        @db.VarChar(100)
    open_time   DateTime      @db.Time
    close_time  DateTime      @db.Time
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt

    user User @relation(fields: [user_id], references: [uuid])

    Charity_documents Charity_documents?
    Charity_images    Charity_images[]
    Charity_filter    Charity_filter[]
    Order             Order[]
    Transaction       Transaction[]
}

enum CharityStatus {
    OPEN
    CLOSE
}
