model Shop {
    id              Int        @id @default(autoincrement())
    user_id         String     @db.Uuid
    bank_account_id Int?        @unique
    name            String     @db.VarChar(40)
    description     String     @db.VarChar(500)
    status          ShopStatus @default(CLOSE)
    open_time       DateTime   @db.Time
    close_time      DateTime   @db.Time
    latitude        Float     @default(0)
    longitude       Float    @default(0)
    address         String     @db.VarChar(100) @default("Please update your address")
    createdAt       DateTime   @default(now())
    updatedAt       DateTime   @updatedAt

    user         User         @relation(fields: [user_id], references: [uuid])
    bank_account Bank_account? @relation(fields: [bank_account_id], references: [id])

    Shop_documents Shop_documents?
    Shop_images    Shop_images[]
    Product        Product[]
    Order          Order[]
    Transaction    Transaction[]
}

enum ShopStatus {
    OPEN
    CLOSE
}
